{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "jsx": "react",
    "paths": {
      "/imports/*": ["imports/*"]
    }
  },
  "exclude": [
    "node_modules",
    ".meteor"
  ],
}
